#:kivy 2.2.1
<Balance>:
    GridLayout:
        size: root.width, root.height
        cols: 2
        Label:
            text: "Balance"
        Label:
            text: "$0.00"
        Label:
            text: "XMR"
        Label:
            text: "0.0000000"

<Banner>:
    GridLayout:
        size: root.width, root.height
        cols: 1
        Label:
            text: "Monero Subscriptions Wallet"
        Label:
            text: "Subscriptions will be paid automatically if the wallet remains open."

<Wallet>:
    GridLayout:
        cols: 1
        size: root.width, root.height
        GridLayout:
            cols: 1
            Label:
                text: "Monero Subscriptions Wallet"
            Label:
                text: "Subscriptions will be paid automatically if the wallet remains open."

        GridLayout:
            cols: 2

            GridLayout:
                cols: 1
                GridLayout:
                    cols: 2
                    Label:
                        text: "Balance"
                    Label:
                        text: "$0.00"
                    Label:
                        text: "XMR"
                    Label:
                        text: "0.0000000"

                GridLayout:
                    cols: 1
                    GridLayout:
                        cols: 4
                        Label:
                            text: "Amount"
                        Label:
                            text: "Name"
                        Label:
                            text: "Renewal"
                        Button:
                            text: "Cancel"
                    GridLayout:
                        cols: 1
                        Button:
                            text: "Add Subscription"
                            id: add_subscription
                            on_release: root.add_subscription()


            GridLayout:
                cols: 1
                Label:
                    text: "Deposit XMR:"
                Label:
                    text: "QR Filler"
                Button:
                    text: "Copy Address"

        GridLayout:
            cols: 3
            TextInput:
                multiline: False
            TextInput:
                multiline: False
            TextInput:
                multiline: False
